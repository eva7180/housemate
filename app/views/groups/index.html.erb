<p id="notice"><%= notice %></p>

<h1>Groups of <%= @house.name %></h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>About</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @house.groups.each do |group| %>
      <tr>
        <td><%= group.name %></td>
        <td><%= group.about %></td>
        <td><%= link_to 'Show', house_group_path(@house, group) %></td>
        <td><%= link_to 'Edit', edit_house_group_path(@house, group) %></td>
        <td><%= link_to 'Destroy', house_group_path(@house, group), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Group', new_house_group_path %> |

<%= link_to 'Back to house', house_path(@house)%>

