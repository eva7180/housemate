<!DOCTYPE html>
<html>
  <head>
    <title>Housemate</title>
    <%= stylesheet_link_tag 'https://fonts.googleapis.com/css?family=Comfortaa|Lato','application.css' %>

    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

  </head>

  <body>
    <nav class="navbar navbar-expand-lg"
    <div class="row">
      <div class= "col-4">
        <h1>
          <%= image_tag "default/small_thumb_default-image.png" %>
          <%= link_to "Housemate", root_path %>
        </h1>
      </div>

      <div class="col-8">
        <% if user_signed_in? %>
          <div class="nav navbar-nav h3">
            <div class="nav-item dropdown ml-auto dropdown-toggle-split">
              <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              Hi,
              <% if current_user.nickname? %>
                <%= current_user.nickname %>
              <% else %>
                <%= current_user.email %>
              <% end %>
            </a>
            <ul class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
                <li class="h4"><%= link_to "My Profile", user_path(current_user) %></li>
               <li class="h4"><%= link_to 'My Dashboard', user_dashboard_path(current_user) %></li>
                <li class="h4"><%= link_to "Sign Out", destroy_user_session_path, method: :delete %></li>
                <div class="dropdown-divider"></div>
                <li class="h4"><%= link_to "New House", new_house_path %></li>
            </ul>
            </div>
          </div>
        <% else %>
        <div class="collapse navbar-collapse">
          <ul class="navbar-nav ml-auto h3">
            <li class="nav-item nav-link">
               <%= link_to "About", root_path %>
            <li class="nav-item nav-link">
                <%= link_to "Sign Up", new_user_registration_path %>
            </li>
            <li class="nav-item nav-link">
             <%= link_to "Sign In", new_user_session_path %>
            </li>
          </ul>
        <% end %>
      </div>
    </div>
  </nav>

<br>

    <div class="container">
      <% if alert %>
        <p class="alert alert-danger alert-dismissible fade show"><%= alert %>
          <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </p>
      <% end %>
      <%= yield %>
    </div>

  </body>
</html>
